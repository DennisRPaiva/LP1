#include <stdio.h>
#include <stdlib.h>

int num = 1; // global para poder ter o numero dos personagens.

typedef struct Personagem
{
    int ident;
    int x,y;
    int pontos;

}Personagem;

Personagem PreenchePonto()
{
    int x,y;
    Personagem p;

    p.pontos = 0;

    printf("x: ");
    scanf("%d",&x);
    p.x = x;

    printf("y: ");
    scanf("%d",&y);
    p.y = y;

    p.ident = num;
    num++;
    return p;
}


void PreencheVetor(Personagem vec[])
{
    int i;
    Personagem heroi;

    for(i=0;i<10;i++)
    {
        printf("Personagem %d: ",(i+1));
        heroi = PreenchePonto();
        vec[i] = heroi;
    }

}

int main()
{
    int i;
    Personagem vetor[10];
    PreencheVetor(vetor);

    for(i=0;i<10;i++)
    {
        printf("Personagem %d--> x: %d, y: %d, numeracao: %d, Pontuacao: %d.\n",(i+1),vetor[i].x,vetor[i].y,vetor[i].ident,vetor[i].pontos);
    }

    return 0;
}
