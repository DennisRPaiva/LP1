#include <stdio.h>


typedef struct guarda_ponto
{
    int x,y;
}Ponto;

Ponto preencher_ponto(int x, int y)
{
   Ponto p;
   p.x = x;
   p.y = y;

   return p;
}

void Preenche_vetor(vec[])
{
    int i,x,y;
    Ponto val;
    for(i=0;i<10;i++)
    {
        printf("Descreva os pontos(x,y): \n",i+1);
        scanf("%d %d",&x,&y);
        val = preencher_ponto(x,y);
        vec[i] = val;
    }
}

void Distancia(vec[])
{
    int i,maior = 0,posicao;
    Ponto distante;
    for(i = 0;i<10;i++)
    {
        if(maior<vec[i].x)
        {
           maior = vec[i].x;
           posicao = i;
        }
        if(maior<vec[i].y)
        {
           maior = vec[i].y;
           posicao = i;
        }
    }
    distante.x = vec[posicao].x;
    distante.y = vec[posicao].y;

    printf("O ponto mais distante de (0,0) eh: (%d,%d).\n",distante.x,distante,.y);
}




int main()
{
    Ponto vetor[10];
    Ponto p1;
    p1 = preencher_ponto(1,2); // equivalente a...
    /* isso.
    Ponto p2;
    p2.x = 1;
    p2.y = 2;
    */
    Preenche_vetor(vetor);
    Distancia(vetor);
}
